<Window x:Class="CLIENT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Sender" Height="350" Width="525">
    <Grid>
        <RichTextBox Margin="0,45,0,0" Name="rtbmsg" >
        <FlowDocument>
            <Paragraph>
                    Type data to send...
                </Paragraph>
        </FlowDocument>
        </RichTextBox>
        <Button Content="Send.." Height="28" HorizontalAlignment="Left" Margin="392,7,0,0" Name="busend" VerticalAlignment="Top" Width="99" Click="busend_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="80,10,0,0" Name="txip" VerticalAlignment="Top" Width="110" Text="127.0.0.1" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="260,10,0,0" Name="tbport" VerticalAlignment="Top" Width="86" Text="12345" />
        <Label Content="IP Address" Height="28" HorizontalAlignment="Left" Margin="12,10,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="IP Address" Height="28" HorizontalAlignment="Left" Margin="192,10,0,0" Name="label2" VerticalAlignment="Top" />
    </Grid>
</Window>
